{
  "name": "bellshade-server",
  "version": "1.0.0",
  "description": "Repositori untuk server dari web organisasi bellshade",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "server:start": "lerna run start --scope=@bellshade/server --stream",
    "server:dev": "lerna run dev --scope=@bellshade/server --stream",
    "server:test": "lerna run test --scope=@bellshade/server --stream",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "author": "bellshade",
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.4.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  }
}
